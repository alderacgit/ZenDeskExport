# Zendesk API Configuration
# Copy this file to .env and fill in your actual credentials

# Your Zendesk email address
ZENDESK_EMAIL=your-email@example.com

# Your Zendesk API token
# Generate one at: https://alderac.zendesk.com/admin/api/settings/tokens
ZENDESK_API_TOKEN=your-api-token-here

# Your Zendesk subdomain (without .zendesk.com)
ZENDESK_SUBDOMAIN=alderac

# Optional: Default group ID to fetch tickets from
# You can find group IDs at: https://alderac.zendesk.com/api/v2/groups.json
ZENDESK_DEFAULT_GROUP_ID=

# Optional: Output directory for exported files
OUTPUT_DIR=./output

# Optional: Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO